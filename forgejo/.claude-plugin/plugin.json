{
  "name": "forgejo",
  "description": "Forgejo/Gitea task management - create issues, sync, and search with rich git context",
  "version": "0.1.0",
  "author": {
    "name": "Erik Craddock"
  },
  "system": "forgejo",
  "displayName": "Forgejo",
  "capabilities": {
    "taskManagement": true,
    "comments": true,
    "labels": true,
    "assignees": true,
    "milestones": true
  },
  "scripts": {
    "create": "scripts/create-issue.py",
    "update": "scripts/update-issue.py",
    "sync": "scripts/sync-issues.py",
    "view": "scripts/view-issue.py",
    "comment": "scripts/create-comment.py"
  },
  "requirements": {
    "env": ["FORGEJO_TOKEN"],
    "description": "Get your token from your Forgejo instance settings"
  }
}
